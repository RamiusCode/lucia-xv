<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  if (typeof window !== 'undefined') {
    document.addEventListener("DOMContentLoaded", () => {
      console.log("ðŸ’Œ Iniciando secciÃ³n de despedida...");

      // ðŸŽ¯ ESTADO INICIAL
      gsap.set("#flores-arriba", { opacity: 0, y: -30, scale: 0.8 });
      gsap.set("#card-despedida", { opacity: 0, y: 40, scale: 0.95 });
      gsap.set("#flor-despedida-izq", { opacity: 0, x: -40 });
      gsap.set("#flor-despedida-der", { opacity: 0, x: 40 });
      gsap.set("#mensaje-despedida p", { opacity: 0, y: 20 });
      gsap.set("#seccion-confirmar", { opacity: 0, y: 30 });
      gsap.set("#flores-abajo", { opacity: 0, y: 30, scale: 0.8 });

      // âœ¨ ANIMACIÃ“N
      const tl = gsap.timeline({
        scrollTrigger: {
          trigger: "#flores-arriba",
          start: "top 85%",
          end: "top 20%",
          toggleActions: "play none none reverse",
        },
      });

      // 1. Flores superiores
      tl.to("#flores-arriba", {
        opacity: 0.8,
        y: 0,
        scale: 1,
        duration: 1,
        ease: "back.out(1.5)",
      })

      // 2. Card aparece
      .to("#card-despedida", {
        opacity: 1,
        y: 0,
        scale: 1,
        duration: 1.2,
        ease: "power3.out",
      }, "-=0.5")

      // 3. Flores laterales
      .to("#flor-despedida-izq, #flor-despedida-der", {
        opacity: 0.4,
        x: 0,
        duration: 1,
        ease: "power2.out",
      }, "-=0.8")

      // 4. PÃ¡rrafos aparecen en cascada
      .to("#mensaje-despedida p", {
        opacity: 1,
        y: 0,
        duration: 0.8,
        stagger: 0.3,
        ease: "power2.out",
      }, "-=0.5")

      // 5. SecciÃ³n confirmar asistencia
      .to("#seccion-confirmar", {
        opacity: 1,
        y: 0,
        duration: 1,
        ease: "power2.out",
      }, "-=0.3")

      // 6. Flores inferiores
      .to("#flores-abajo", {
        opacity: 0.7,
        y: 0,
        scale: 1,
        duration: 1,
        ease: "back.out(1.5)",
      }, "-=0.5");

      // ðŸŒ¸ ANIMACIONES CONTINUAS
      gsap.to("#flor-despedida-izq, #flor-despedida-der", {
        y: -10,
        duration: 4,
        ease: "sine.inOut",
        yoyo: true,
        repeat: -1,
        delay: 2,
      });

      // CorazÃ³n pulsando
      gsap.to("#mensaje-despedida svg", {
        scale: 1.2,
        duration: 1.5,
        ease: "sine.inOut",
        yoyo: true,
        repeat: -1,
        delay: 2,
      });

      // BotÃ³n pulsando
      gsap.to("#boton-confirmar img", {
        scale: 1.05,
        duration: 2,
        ease: "sine.inOut",
        yoyo: true,
        repeat: -1,
        delay: 3,
      });

      console.log("ðŸ’Œâœ¨ Â¡SecciÃ³n de despedida activada!");
    });
  }
</script>

<style>
  /* Efecto hover en el card */
  #card-despedida:hover {
    box-shadow: 0 20px 40px rgba(162, 119, 53, 0.15);
    transition: box-shadow 0.5s ease;
  }

  /* Resaltar palabras importantes */
  #mensaje-despedida span {
    transition: all 0.3s ease;
  }

  #mensaje-despedida span:hover {
    color: #c9a55e;
    text-shadow: 0 0 10px rgba(162, 119, 53, 0.3);
  }
</style>